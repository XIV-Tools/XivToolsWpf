						<Trigger Property="IsChecked" Value="True">
							<Setter TargetName="Border" Property="Background" Value="{DynamicResource PrimaryHueMidBrush}"/>
							<Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidForegroundBrush}"/>
